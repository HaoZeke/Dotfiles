# lalt --- option key
# cmd --- alt equivalent
# Open Alacritty
lalt - return : open -na ~/Applications/Nix\ Apps/Alacritty.app
# Kill
lalt - w : yabai -m window --close
# focus window
lalt - h : yabai -m window --focus west
lalt - n : yabai -m window --focus south 
lalt - e : yabai -m window --focus north 
lalt - i : yabai -m window --focus east 

# swap managed window
shift + lalt - h : yabai -m window --swap west
shift + lalt - n : yabai -m window --swap south
shift + lalt - e : yabai -m window --swap north
shift + lalt - i : yabai -m window --swap east

# move managed window
shift + cmd - h : yabai -m window --warp west 
shift + cmd - n : yabai -m window --warp south
shift + cmd - e : yabai -m window --warp north
shift + cmd - i : yabai -m window --warp east

shift + cmd - z : yabai -m space --display west
shift + cmd - x : yabai -m space --display east

# destroy desktop
shift + cmd - w : yabai -m space --destroy

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# make floating window fill screen
shift + alt - up     : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
shift + alt - left   : yabai -m window --grid 1:2:0:0:1:1
shift + alt - right  : yabai -m window --grid 1:2:1:0:1:1 

