# See also https://github.com/swaywm/sway/issues/3999
      xkb_layout "colemak"
}

input type:keyboard {
    repeat_delay 200
    repeat_rate 30
}

# swaymsg -t get_inputs
input type:touchpad {
    natural_scroll enabled
	tap enabled
}

input type:mouse {
    natural_scroll enabled
}

# Somehow not taken up automatically
input "5215:474:2.4G_RX_Mouse" {
    natural_scroll enabled
}

