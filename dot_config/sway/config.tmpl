# Service update
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Faster thunar
exec thunar --daemon

# Notifications
exec_always dunst

# Sync stuff
exec insync start

# Listen to lock events
exec --no-startup-id $lockManager

# Window rules
for_window [app_id="Telegram"] border none
for_window [class="tabby"] border none

# Profiles for displays
exec kanshi

# Moves the external screen to the right
# swaymsg output eDP-1 pos 1600 0 res 1920x1080
# The scaling is because of the DPI stuff
# Swap 1600 and 0 to get the screen on the relative left

include /etc/sway/config.d/*
include $HOME/.config/sway/conf.d/*
include $HOME/.config/sway/conf.d/**/*
