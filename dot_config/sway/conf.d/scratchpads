# The main scratchpad in the upper left
for_window [app_id="mS"] {
    move scratchpad
    move position 0 0
    resize set 50 ppt 35 ppt
    floating enable
    border 1pixel
}
bindsym F1 exec swaymsg [app_id="mS"] scratchpad show || exec foot --app-id="mS" -e tmux new -s mS

