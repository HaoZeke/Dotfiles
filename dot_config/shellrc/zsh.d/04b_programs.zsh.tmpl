# junegunn/fzf-bin
zinit ice from="gh-r" as="command" bpick="*{{ .chezmoi.os }}*"
zinit light junegunn/fzf

# monochromegane/the_platinum_searcher
zinit ice as"program" from"gh-r" bpick"*{{ .chezmoi.os }}*" pick"*/pt"
zinit load monochromegane/the_platinum_searcher

# sharkdp/fd
zinit ice as"command" from"gh-r" bpick"*{{ .chezmoi.os }}*" mv"fd* -> fd" pick"fd/fd"
zinit light sharkdp/fd

# sharkdp/bat
zinit ice as"command" from"gh-r" bpick"*{{ .chezmoi.os }}*" mv"bat* -> bat" pick"bat/bat"
zinit light sharkdp/bat

# ogham/exa, replacement for ls
{{ if eq .chezmoi.os "darwin" }}
# Sadly this is released as macos
zinit ice from"gh-r" as"program" bpick"*macos*" mv"*/exa* -> exa"
{{ else if eq .chezmoi.os "linux" }}
zinit ice from"gh-r" as"program" bpick"*linux*" mv"*/exa* -> exa"
{{ end }}
zinit light ogham/exa

# mvdan/sh
zinit ice from"gh-r" as"program" bpick"*{{ .chezmoi.os }}*" mv"shfmt* -> shfmt"
zinit light mvdan/sh

