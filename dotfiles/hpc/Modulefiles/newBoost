#%Module1.0#####################################################################

proc ModulesHelp { } {
puts stderr " "
puts stderr "This module loads the BOOST library built with gcc"
}
module-whatis "Name: BOOST built with gcc and no parallelism"
module-whatis "Version: master"
module-whatis "Category: runtime library"
module-whatis "Description: Boost free peer-reviewed portable C++ source libraries"
module-whatis "http://www.boost.org"

set             version             master
 

prepend-path    PATH                /users/home/rog32/.hpc/boost/bin
prepend-path    MANPATH             /users/home/rog32/.hpc/boost/share/man
prepend-path    INCLUDE             /users/home/rog32/.hpc/boost/include
prepend-path    LD_LIBRARY_PATH     /users/home/rog32/.hpc/boost/lib

setenv          BOOST_DIR        /users/home/rog32/.hpc/boost/
setenv          BOOST_ROOT       /users/home/rog32/.hpc/boost/
setenv          BOOST_LIB        /users/home/rog32/.hpc/boost/lib
setenv          BOOST_INC        /users/home/rog32/.hpc/boost/include

family "boost"
