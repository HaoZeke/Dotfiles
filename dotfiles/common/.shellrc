if command -v aria2c >/dev/null 2>&1; then
  aria2c -j2 "$FURL"
elif command -v wget >/dev/null 2>&1; then
  wget -v -c "${FURL}" -O "${MD5}.libgen"
  wget --trust-server-names -v -c "${FURL}"
else
  curl -L -J -O "${FURL}" --progress-bar
fi

