#-*- mode: conf -*-
# Base16 Spacemacs for gtk2 (https://github.com/dawikur/base16-gtk2)
# By Nasser Alshammari (https://github.com/nashamri/spacemacs-theme)
# spacemacs (https://github.com/dawikur/base16-gruvbox-scheme)

# Themes
gtk-color-scheme = "Adwaita-dark"
gtk-icon-theme-name="Flat-Remix-Blue-Dark"
gtk-cursor-theme-size=0
gtk-cursor-theme-name="Paper"

# Fonts
gtk-font-name="Fira Sans Book 16"
gtk-xft-antialias=1
gtk-xft-hinting=1  
gtk-xft-hintstyle="hintfull"  
gtk-xft-rgba="rgb"

# Also kang from https://config.phundrak.com/
# Menus
gtk-can-change-accels=1
gtk-menu-bar-popup-delay=0
gtk-menu-popdown-delay=0
gtk-menu-popup-delay=0
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=1
gtk-enable-input-feedback-sounds=1

# Filechooser
[Filechooser Settings]
StartupMode=recent
LocationMode=path-bar
ShowHidden=true
ShowSizeColumn=true
ViewMode=list-view
IconViewScale=-1
# Position
GeometryX=566
GeometryY=202
# Size
GeometryWidth=800
GeometryHeight=400
# Sort
SortColumn=modified
SortOrder=descending
