#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc node -c

super + n
	bspc desktop -l next

super + b
	bspc desktop -B

super + {t,p,s,f}
	bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc wm --record-history off; \
	bspc node {older,newer} -f; \
	bspc wm --record-history on

super + y
	bspc node -n last.!automatic

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	node @DESKTOP_SEL:/ -C forward|backward
	
super + bracket{west,east}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {west -10,south +10,up -10,east +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {east -10,up +10,south -10,west +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

#
# wm independent hotkeys
#

super + Return
	tilix	

ctrl + shift + Return
	emacsclient -c -a ''

#
# Dropdowns
#

# Kitty is made to float here incase I use it elsewhere too

F1
 tdrop --wm bspwm -ma -w 70% -h 70% -x 15% -y 15% -n 1 -s mainWindow -f "--config $HOME/.config/kitty/kittyMain.conf" kitty 

F5
 tdrop --wm bspwm -ma -w 35% -h 15% -n 2 -s subWindow -f "--config $HOME/.config/kitty/kittySub.conf" kitty 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
