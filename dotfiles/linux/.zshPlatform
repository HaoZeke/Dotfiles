if which fzf >/dev/null 2>&1; then
  zplug "junegunn/fzf-bin", \
      from:gh-r, \
      as:command, \
      rename-to:fzf, \
      use:"*linux*amd64*"
fi

if which brew >/dev/null 2>&1; then
  zplug "zpm-zsh/linuxbrew"
fi

if which gibo >/dev/null 2>&1; then
zplug "simonwhitaker/gibo"
else
  echo "Please install gibo for managing .gitignore files"
fi

if which exa >/dev/null 2>&1; then
  zplug "ogham/exa", \
    from:gh-r, \
    as:command, \
    rename-to:exa, \
    use:"*linux*"
fi

if which archiver >/dev/null 2>&1; then
  zplug "mholt/archiver", \
    from:gh-r, \
    as:command, \
    rename-to:archiver, \
    use:"*linux*amd64*"
fi

if which fzf >/dev/null 2>&1; then
  if which git-fzf >/dev/null 2>&1; then
    zplug 'b4b4r07/git-fzf', hook-build:'make'
    zplug 'b4b4r07/git-fzf', \
        as:command, \
        use:'bin/(git-*).zsh', \
    rename-to:'$1'
  fi
fi

