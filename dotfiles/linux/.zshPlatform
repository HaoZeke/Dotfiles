########################
# Linux zsh defaults   #
########################

# Extra zPlug Stuff
#####################


# Programs
if ! command -v rg >/dev/null 2>&1; then
  zplug "BurntSushi/ripgrep", \
      from:gh-r, \
      as:command, \
      rename-to:rg, \
      use:"*64*linux*"
fi

if ! command -v fzf >/dev/null 2>&1; then
  zplug "junegunn/fzf-bin", \
      from:gh-r, \
      as:command, \
      rename-to:fzf, \
      use:"*linux*amd64*"
fi

if ! command -v git-fzf >/dev/null 2>&1; then
  zplug 'b4b4r07/git-fzf', hook-build:'make'
  zplug 'b4b4r07/git-fzf', \
      as:command, \
      use:'bin/(git-*).zsh', \
  rename-to:'$1'
fi
